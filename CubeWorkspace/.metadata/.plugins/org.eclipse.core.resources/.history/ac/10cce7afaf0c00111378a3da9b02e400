/////////////////////////////////////////////
// COMMON DIRECTIVES to Use ASM Language
  .syntax unified
  .cpu cortex-m4
  .fpu softvfp
  .thumb

///////////////////////////////

	.global myTimeEvaluationFunction
	.text

myTimeEvaluationFunction:
	PUSH {R4,R5}
    MOV R4, #0
    MOV R5, #1
	CMP R5, R0          // Compare la variable de boucle (R5) avec N (R0)
    BGT Fin             // Si n > N, on passe directement à la fin (cas N<=0)

Boucle_waitN:
    ADD R4, R4, #0		// Instruction simple à répéter
    ADD R5, R5, #1      // Incrémantation du compteur de boucle
    CMP R5, R0          // Test pour sortir
    BLE Boucle          // Si n <= N, on recommence

Fin_waitN:
	POP {R4,R5}
    BX LR

///////////////////////////////




